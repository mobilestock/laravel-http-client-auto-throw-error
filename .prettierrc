{
  "tabWidth": 2,
  "useTabs": false,
  "plugins": ["@prettier/plugin-php"],
  "printWidth": 120,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.php"],
      "options": {
        "parser": "php",
        "tabWidth": 4
      }
    },
    {
      "files": ["*.js", "*.ts", "*.tsx"],
      "options": {
        "semi": false
      }
    }
  ]
}
